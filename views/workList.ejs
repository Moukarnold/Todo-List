
<%- include("partials/header.ejs") %>


    <h1 class="welcome">Tasks for <%= date %></h1>

    <ul class="activities">
        <% tasks.forEach(task => { %>
            <li ><%= task.task %> at <%= task.time %></li>
        <% }); %>
    </ul>


    <h2 class="welcome">add new tasks :</h2>

    <form method="POST" action="/workList">
        <div class="taskSetting" >
            <div class="taskParts">
                <label for="theDate">Date :</label>
                <input type="hidden" value="<%=date%>" name="date">
            </div>
            
            <div class="taskParts">
            <label for="theTime">Time :</label>
            <input type="time" id="theTime" name="time">
            </div>
        
          <div class="taskParts">
            <label for="theTask">Write a task:</label>
            <input type="text" id="theTask" name="task" placeholder="Write a task">
          </div>
          <input type="submit" value="add Task" >
    </form>

</body>
</html>